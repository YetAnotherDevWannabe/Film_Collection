{% extends 'base.html.twig' %}

{# Page title #}
{% block title %}Profil{% endblock %}

{% block body %}

<div class="container-fluid">

    {# Title #}
    <div class="row">
        <h1 class="col-12 text-center my-5">Gestion du profil</h1>
    </div>
    <div class="row">
        <div class="col-12 col-md-10 offset-md-1">
            <div class="row">


                {# Left block #}
                <div class="col-12 col-md-3 gradient-custom-reverse-50 px-2 py-3 text-center rounded-start">

                    {# Avatar #}
                    <div class="row">
                        <div class="col-12 profil-photo mx-2 d-flex justify-content-center align-items-center">

                            {% if app.user and app.user.avatar is not null %}

                                <img class="img-fluid img-thumbnail-mini me-3"
                                     src="{{ asset('img/uploads/avatar/' ~ app.user.avatar) }}"
                                     alt="avatar"
                                >
                            {% else %}

                                <img class="img-fluid img-thumbnail-mini me-3"
                                     src="{{ asset('img/default_avatar.png') }}"
                                     alt="default avatar"
                                >

                            {% endif %}

                        </div>
                    </div>

                    {# Link to page to chage avatar #}
                    <div class="row">
                        <div class="col-12 pt-3">
                            <a class="text-compliment fw-bold" href="{{ path('main_avatar_edit') }}">Modifier l'avatar</a>

                            {% if app.user and app.user.avatar is not null %}

                                <br>
                                <a class="text-compliment fw-bold" href="  {{ path('main_avatar_delete') }}">Supprimer l'avatar</a>

                            {% endif %}
                        </div>
                    </div>
                </div>

    {# Account information #}
    <div class="row text-center col-md-7">
        <div class="col-12 col-md-8 offset-md-5">

            <ul class="list-group col-12 col-md-8">
                <li class="list-group-item">Adresse Email : <span class="text-info">{{ app.user.email }}</span></li>
                <li class="list-group-item">Pseudonyme : <span class="text-info">{{ app.user.nickname }}</span></li>
                <li class="list-group-item">Date d'inscription : <span class="text-info">{{ app.user.registrationDate|date('d/m/Y Ã  H\\hi') }}</span></li>
                <li class="list-group-item">Compte : <span class="text-info">{{ is_granted('ROLE_ADMIN') ? 'Administrateur' : 'Membre' }}</span></li>
                <li style="list-style-type:none;"><a class="btn-primary btn-block mt-3" href="{{ path('main_profil_edit') }}" role="button">Modifier le profil</a></li>
                <li style="list-style-type:none"><a class="btn-warning btn-block mt-3" href="#" >Supprimer le profil</a></li>
            </ul>
        </div>
    </div>
</div>






{% endblock %}