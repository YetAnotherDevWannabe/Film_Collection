{# Using the "base.html.twig" page template #}
{% extends 'base.html.twig' %}

{# Title of the page #}
{% block title %}Erreur 404 : Page introuvable{% endblock %}

{# Page CSS #}
{% block css %}{% endblock %}

{# Page content #}
{% block body %}

	<div class="container-fluid">
		<div class="row">

			{# Text 404 #}
			<div class="col-12 text-center">
				<h3 class="mt-3 mt-md-4 text-center fs-3 text-basecolor">Erreur 404 : Page introuvable</h3>
			</div>

			{# Text 404 explication #}
			<div class="col-12 text-center">
				<p class="mt-2 mb-3 mb-md-4 text-center fs-4 text-basecolor">La page que vous tentiez d'atteindre n'a pas pu être trouvé</p>
			</div>

			{# Image 404 #}
			<div class="col-12 text-center">
				<img class="img-fluid m-0 col-12 col-md-8 col-sm-8 offset-md-2 offset-sm-2"
					 style="max-width: 800px;"
					 src="{{ asset('img/errors/404.gif') }}"
					 title="Erreur 404 : Page introuvable"
					 alt="Erreur 404 : Page introuvable">
			</div>

		</div>
	</div>

{% endblock %}

{# Page footer #}
{% block footer %}
	{% include 'partials/footer-small.html.twig' %}
{% endblock %}