{% block body %}

	<div class="container-fluid">
		<div class="row">

			<div class="col-12 p-0">
				{# Image 404 #}
				<img style="width: 100%; height: auto; padding-left:0;"
					 src="{{ asset('img/errors/error_404.jpg') }}"
