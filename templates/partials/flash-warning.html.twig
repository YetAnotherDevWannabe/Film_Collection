{% for message in app.flashes('warning') %}
	<div class="container-fluid mt-3">

		<div class="row">
			<div class="col-8 offset-2 overflow-hidden rounded alert alert-warning alert-dismissible fade show" role="alert">
				<div class="row justify-content-center">

					<div class="text-center col-2 shadow-custom bg-tw-warning bg-icon d-none d-md-block border-radius-start">
						<div class="d-flex align-items-center justify-content-center h-100">
							<i class="fas fa-exclamation-triangle fs-3 text-white"></i>
						</div>
					</div>

					<div class="text-start bg-white px-3 pt-2 col-10 shadow-custom custom-border-radius">
						<span class="fa-5 color-tw-warning">Attention</span>
						<p class="fa-5 text-dark">{{ message|raw }}</p>
					</div>
					<button type="button" class="btn-close" data-mdb-dismiss="alert" aria-label="Close"></button>

				</div>
			</div>
		</div>

	</div>
{% endfor %}